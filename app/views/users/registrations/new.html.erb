<div class="header-wrapper sign">
  <div class="row">
    <%= render "header" %>
  </div>  
</div>

<div class="row" id="devise-form">
  <div class="small-12 small-centered large-6 large-centered columns devise-form">

    

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div id="devise-form-header">
        <h3>Create A Free Account</h3>
      </div>

      <%= devise_error_messages! %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
      </div>

      <div class="field">
        <%= f.text_field :name, placeholder: 'Name' %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Password (minimum 8 characters)' %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm password' %>
      </div>

      <div class="actions button-centered">
        <%= f.submit "Sign up", class: "button" %>
      </div>
    <% end %>
    
    <div class="devise-form-links">
      <%= render "devise/shared/links" %>
    </div>
    

  </div>
</div>

<script>
  $("body").addClass("blue-body");
</script>
