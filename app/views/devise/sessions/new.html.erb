<div class="row" id="devise-form">
  <div class="small-10 small-centered large-6 large-centered columns devise-form">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { autocomplete: 'off' }) do |f| %>

      <%= devise_error_messages! %>

      <%= f.email_field :email, style: "display:none;"%>
      <%= f.password_field :password, style: "display:none;"%>


      <div class="field">
        <!-- <%= f.label :email %> -->
        <%= f.email_field :email, autofocus: true, placeholder: "Your email", input_html: {autocomplete: "off"} %>
      </div>

      <div class="field">
        <!-- <%= f.label :password %> -->
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
      </div>

<!--       <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%> -->

      <div class="actions button-centered">
        <%= f.submit "Sign in", class: "button"%>
      </div>
    <% end %>
    
    <div class="devise-form-links">
      <%= render "devise/shared/links" %>
    </div>


  </div>
</div>

<script>
  $("body").addClass("blue-body");

</script>