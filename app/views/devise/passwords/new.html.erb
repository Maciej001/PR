<%= render "header" %>
<div class="row" id="devise-form">
  <div class="small-12 small-centered large-6 large-centered columns devise-form">

		<div id="devise-form-header">
			<h2>Forgot your password?</h2>
		</div> 

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  <%= devise_error_messages! %>

		  <div class="field">
		    <%= f.label :email %>
		    <%= f.email_field :email, autofocus: true %>
		  </div>

		  <div class="actions button-centered">
		    <%= f.submit "Send me reset password", class: "button" %>
		  </div>
		<% end %>
		
		<div class="devise-form-links">
			<%= render "devise/shared/links" %>
		</div>


  </div>
</div>